{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [{
    "type": "node",
    "request": "launch",
    "name": "gimbal",
    "runtimeArgs": [
      "-r",
      "ts-node/register",
      "-r",
      "tsconfig-paths/register"
    ],
    "args": [
      "${workspaceFolder}/packages/gimbal/src/index.ts",
      "--cwd",
      "${workspaceFolder}/packages/${input:appInput}"
    ],
    "env": {
      "TS_NODE_PROJECT": "${workspaceFolder}/packages/gimbal/tsconfig.json"
    },
    "skipFiles": [
      "<node_internals>/**/*.js"
    ]
  }, {
    "type": "node",
    "request": "launch",
    "name": "gimbal audit",
    "runtimeArgs": [
      "-r",
      "ts-node/register",
      "-r",
      "tsconfig-paths/register"
    ],
    "args": [
      "${workspaceFolder}/packages/gimbal/src/index.ts",
      "audit",
      "--cwd",
      "${workspaceFolder}/packages/${input:appInput}"
    ],
    "env": {
      "TS_NODE_PROJECT": "${workspaceFolder}/packages/gimbal/tsconfig.json"
    },
    "skipFiles": [
      "<node_internals>/**/*.js"
    ]
  }, {
    "type": "node",
    "request": "launch",
    "name": "gimbal heap-snapshot",
    "runtimeArgs": [
      "-r",
      "ts-node/register",
      "-r",
      "tsconfig-paths/register"
    ],
    "args": [
      "${workspaceFolder}/packages/gimbal/src/index.ts",
      "heap-snapshot",
      "--cwd",
      "${workspaceFolder}/packages/${input:appInput}/build",
      "--config",
      "../.gimbalrc.yml"
    ],
    "env": {
      "TS_NODE_PROJECT": "${workspaceFolder}/packages/gimbal/tsconfig.json"
    },
    "skipFiles": [
      "<node_internals>/**/*.js"
    ]
  }, {
    "type": "node",
    "request": "launch",
    "name": "gimbal lighthouse",
    "runtimeArgs": [
      "-r",
      "ts-node/register",
      "-r",
      "tsconfig-paths/register"
    ],
    "args": [
      "${workspaceFolder}/packages/gimbal/src/index.ts",
      "lighthouse",
      "--cwd",
      "${workspaceFolder}/packages/${input:appInput}/build",
      "--config",
      "../.gimbalrc.yml"
    ],
    "env": {
      "TS_NODE_PROJECT": "${workspaceFolder}/packages/gimbal/tsconfig.json"
    },
    "skipFiles": [
      "<node_internals>/**/*.js"
    ]
  }, {
    "type": "node",
    "request": "launch",
    "name": "gimbal size",
    "runtimeArgs": [
      "-r",
      "ts-node/register",
      "-r",
      "tsconfig-paths/register"
    ],
    "args": [
      "${workspaceFolder}/packages/gimbal/src/index.ts",
      "size",
      "--cwd",
      "${workspaceFolder}/packages/${input:appInput}"
    ],
    "env": {
      "TS_NODE_PROJECT": "${workspaceFolder}/packages/gimbal/tsconfig.json"
    },
    "skipFiles": [
      "<node_internals>/**/*.js"
    ]
  }, {
    "type": "node",
    "request": "launch",
    "name": "gimbal unused-source",
    "runtimeArgs": [
      "-r",
      "ts-node/register",
      "-r",
      "tsconfig-paths/register"
    ],
    "args": [
      "${workspaceFolder}/packages/gimbal/src/index.ts",
      "unused-source",
      "--cwd",
      "${workspaceFolder}/packages/${input:appInput}/build",
      "--config",
      "../.gimbalrc.yml"
    ],
    "env": {
      "TS_NODE_PROJECT": "${workspaceFolder}/packages/gimbal/tsconfig.json"
    },
    "skipFiles": [
      "<node_internals>/**/*.js"
    ]
  }],
  "inputs": [{
    "type": "pickString",
    "id": "envFileInput",
    "description": "Which ENV file should be used?",
    "options": ["CircleCI/commit.env", "CircleCI/pr.env", "TravisCI/commit.env", "TravisCI/pr.env"],
    "default": "CircleCI/pr.env"
  }, {
    "type": "pickString",
    "id": "appInput",
    "description": "Which app do you want to run on?",
    "options": ["example-angular", "example-react"],
    "default": "example-react"
  }]
}
