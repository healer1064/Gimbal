{
  "editor.formatOnSave": true,
  "[json]": {
    "editor.formatOnSave": false,
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [{
    "directory": "./packages/gimbal",
    "changeProcessCWD": true
  }, {
    "directory": "./packages/gimbal-core",
    "changeProcessCWD": true
  }, {
    "directory": "./packages/plugin-last-value",
    "changeProcessCWD": true
  }, {
    "directory": "./packages/plugin-mysql",
    "changeProcessCWD": true
  }, {
    "directory": "./packages/plugin-sqlite",
    "changeProcessCWD": true
  }, {
    "directory": "./packages/typings",
    "changeProcessCWD": true
  }],
  "cSpell.words": [
    "brotli",
    "deepmerge",
    "directorysize",
    "globby",
    "lerna",
    "monorepo",
    "precache",
    "promisify"
  ],
  "sqltools.connections": [{
    "database": "./examples/react/gimbal.db",
    "dialect": "SQLite",
    "name": "gimbal-example-react"
  }]
}
