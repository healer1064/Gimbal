{
  "name": "webperf-ci",
  "version": "1.0.0",
  "description": "A CLI tool for monitoring web performance in modern web projects",
  "main": "./bin/index.js",
  "bin": {
    "perfano": "./bin/index.js"
  },
  "types": "./bin/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "check:compile": "tsc --noEmit -p .",
    "create": "npm run build && npm run start",
    "lint": "eslint 'src/**/*.ts'",
    "lint-staged": "lint-staged",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ModusCreateOrg/webperf-ci.git"
  },
  "keywords": [
    "web-performance",
    "ci",
    "performance",
    "webdevelopment",
    "javascript"
  ],
  "author": "Ahsan Ayaz <ahsan.ayaz@moduscreate.com>, Adaobi Frank <adaobi.frank@moduscreate.com>, Mitchell Simoens <mitchell.simoens@moduscreate.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ModusCreateOrg/webperf-ci/issues"
  },
  "homepage": "https://github.com/ModusCreateOrg/webperf-ci#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx},!src/models": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "2.4.2",
    "clear": "0.1.0",
    "commander": "2.20.0",
    "figlet": "1.2.1",
    "inquirer": "6.2.2"
  },
  "devDependencies": {
    "@types/figlet": "1.2.0",
    "@types/node": "11.13.0",
    "@typescript-eslint/eslint-plugin": "1.6.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.4.1",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "ts-node": "8.0.3",
    "typescript": "3.4.1"
  }
}
