{
  "name": "@modus/gimbal-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "rimraf 'packages/**/{build,lib}' '**/node_modules' '**/coverage'",
    "link": "lerna run link",
    "lint": "lerna run lint",
    "lint-staged": "lint-staged",
    "publish": "lerna run tsc && lerna publish",
    "test": "jest --coverage",
    "test:coveralls": "cat ./coverage/lcov.info | coveralls",
    "test:nocov": "jest",
    "version": "lerna version patch --exact --yes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/bin/**/*.{js,jsx,ts,tsx},packages/**/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "24.0.13",
    "@types/node": "12.0.2",
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "@zerollup/ts-transform-paths": "1.7.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-import-resolver-lerna": "1.1.0",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-jest": "22.5.1",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.13.0",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "lerna": "3.14.1",
    "lint-staged": "8.1.7",
    "prettier": "1.17.1",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "ttypescript": "1.5.6",
    "typescript": "3.4.5"
  }
}
