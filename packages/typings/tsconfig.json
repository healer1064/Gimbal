// the paths like outDir, rootDir, paths and include are
// relative to this tsconfig.json
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/typings/*": ["./*"],
      "@modus/gimbal-core": ["../gimbal-core/src/index.ts"],
      "@modus/gimbal-core/lib/*": ["../gimbal-core/src/*"]
    }
  },
  "include": [
    "./**/*"
  ]
}
