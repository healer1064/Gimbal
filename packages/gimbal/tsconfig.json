// the paths like outDir, rootDir, paths and include are
// relative to this tsconfig.json
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDirs": ["src", "../shared/src"],
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["../shared/src/*"],
      "@/typings/*": ["../typings/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "../shared/src/**/*",
    "./src/**/*"
  ]
}
