// the paths like outDir, rootDir, paths and include are
// relative to this tsconfig.json
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/typings/*": ["./typings/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
